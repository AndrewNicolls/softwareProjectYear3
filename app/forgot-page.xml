<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" class="page">
<Page.actionBar>
        <ActionBar title="User Password Reset" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
<StackLayout>
        <Label  text="Forgot your password?" class="h1 text-center"/>
        <TextField hint="Enter email" keyboardType="email" text="{{email}}" class=""/>
        <button text="Send reset password email" onTap="emailReset"></button>
    </StackLayout>
</Page>