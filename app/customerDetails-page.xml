<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" class="page">
<Page.actionBar>
        <ActionBar title="Customer Details" icon="" class="action-bar">
        
        </ActionBar>
    </Page.actionBar>

    <StackLayout>
        
        <TextField hint="Firstname" keyboardType="email" text="{{firstname}}" class=""/>
        <TextField hint="Lastname" keyboardType="email" text="{{lastname}}" class=""/>
        <TextField hint="address" keyboardType="email" text="{{address}}" class=""/>
        <TextField hint="contact number" keyboardType="email" text="{{contactNum}}" class=""/>
       
        <button text="customer info" tap="onTap"></button>
    </StackLayout>
</Page>