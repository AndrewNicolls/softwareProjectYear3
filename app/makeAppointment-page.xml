<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" class="page">
<Page.actionBar>
        <ActionBar title="Make appointments " icon="" class="action-bar">    
        </ActionBar>
    </Page.actionBar>

    <StackLayout>
        <DatePicker id="date" year="2019" month="1" day="1" ></DatePicker>
        <TimePicker id="time" minute="30" hour="10"></TimePicker>

        <ListView items="{{groceryList}}" itemTap="itemTap">
            <ListView.itemTemplate>
            <Label text="{{name}}" horizontalAlignment="left"
            verticalAlignment="center"/>
            </ListView.itemTemplate>
        </ListView>
        <button text ='make appointment' tap="makeAppt"></button>
    
       
    </StackLayout>
</Page>