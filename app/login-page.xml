<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" class="page">
<Page.actionBar>
        <ActionBar title="User Login" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-20">
        <Label text="Enter login details below" class="h1 text-center"/>
        <TextField id="email" hint="Enter email here" keyboardType="email" text="{{loginEmail}}" class=""/>
        <TextField id="password" hint="Enter password here" text="{{loginPassword}}" secure="true" class=""/>
        <button text="Login" tap="loginPressed"></button>
        <button text="Register" tap="registerPressed"></button>
        <button text="Forgot Password" tap="forgotPassword"></button>
        <button text="logout" tap="logoutPressed"></button>
    </StackLayout>
</Page>